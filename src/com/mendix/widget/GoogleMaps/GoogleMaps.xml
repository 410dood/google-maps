<?xml version="1.0" encoding="utf-8"?>
<widget id="com.mendix.widget.GoogleMaps.GoogleMaps" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../../../../xsd/widget.xsd">
    <name>Google Maps</name>
    <description>Show locations on google maps</description>
    <icon/>
    <properties>
    
        <property key="apiKey" type="string" required="false">
            <caption>Api key</caption>
            <category>Data source</category>
            <description>The google maps Javascript API v3 does not require an API key to function correctly. However, google strongly encourages you to load the maps API using an APIs key</description>
        </property>

        <property key="address" type="attribute" required="true">
            <caption>Address</caption>
            <category>Data source</category>
            <description>Use address of known places such as cities, street</description>
            <attributeTypes>
                <attributeType name="String"/>
            </attributeTypes>
        </property>

        <property key="defaultAddress" type="string" defaultValue="Marie Hotel, Martin Road, Kampala" required="false">
            <caption>Default address</caption>
            <category>Data source</category>
            <description></description>
        </property>

    </properties>
</widget>
